<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Settings">
    <include layout="@layout/appbar"
        android:id="@+id/tb"/>
    <ScrollView
        android:layout_below="@id/tb"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_total_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Users: 0"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_total_dealers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Dealers: 0"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_total_collectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Collectors: 0"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dealers"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Dealer Applications -->
        <LinearLayout
            android:id="@+id/option_dealer_applications"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@android:drawable/ic_menu_agenda"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:text="Dealer Applications"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Dealer Profiles -->
        <LinearLayout
            android:id="@+id/option_dealer_profiles"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:text="Dealer Profiles"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collectors"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Collector Applications -->
        <LinearLayout
            android:id="@+id/option_collector_applications"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@android:drawable/ic_menu_agenda"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:text="Collector Applications"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Collector Profiles -->
        <LinearLayout
            android:id="@+id/option_collector_profiles"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:text="Collector Profiles"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>
